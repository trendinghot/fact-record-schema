{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FactRecord",
  "type": "object",
  "additionalProperties": false,
  "required": ["fact_id", "subject", "timestamp", "status"],
  "properties": {
    "fact_id": { "type": "string" },
    "subject": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "status": {
      "type": "string",
      "enum": ["MATCH", "MISMATCH", "UNKNOWN", "ABSTAIN"]
    },
    "artifacts": {
      "type": "array",
      "items": { "$ref": "./artifact-reference.schema.json" }
    }
  }
}
